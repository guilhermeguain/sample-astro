---
import type { PostProps } from "../lib/strapi/types";

interface Props extends PostProps {}

const { attributes } = Astro.props;
---

<li>
  <a href={`/blog/${attributes.slug}/`}>
    <img
      src={`${import.meta.env.STRAPI_URL}${attributes.featuredImage?.data?.attributes.url}`}
      alt={attributes.featuredImage?.data?.attributes.alternativeText}
      width={attributes.featuredImage?.data?.attributes.width}
      height={attributes.featuredImage?.data?.attributes.height}
    />
    <h2>{attributes.title}</h2>
  </a>
</li>

<style>
  li {
    padding: 1rem;

    width: 100%;
    max-width: 20rem;

    box-sizing: border-box;

    list-style: none;
    display: flex;
    padding: 1px;
    background-color: #23262d;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    background-position: 100%;
    transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);

    @media only screen and (min-width: 768px) {
      width: calc((100% / 3) - ((1rem * 2) / 3));
    }
  }
  li:is(:hover, :focus-within) {
    background-position: 0;
    background-image: var(--accent-gradient);
  }
  li:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent-light));
  }
  li a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: calc(1rem - 1px);
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  li img {
    border-radius: 8px;

    max-width: 100%;
  }
  li h2 {
    margin: 0.5rem 0 0;

    font-size: 1.25rem;
    font-weight: normal;
  }
</style>
